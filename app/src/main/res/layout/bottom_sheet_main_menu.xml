<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMenuBackground"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <include layout="@layout/bottom_sheet_main_menu_row_1"/>
    <include layout="@layout/bottom_sheet_main_menu_row_2"/>
    <include layout="@layout/bottom_sheet_main_menu_row_3"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <include layout="@layout/bottom_sheet_main_menu_bottom"/>
</LinearLayout>