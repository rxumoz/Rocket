<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_background">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/screenshot_onboarding_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="256dp"
            android:layout_height="177dp"
            android:layout_margin="12dp"
            android:src="@drawable/promotion_01" />

        <TextView
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="@string/screenshot_on_boarding_text_msg"
            android:textColor="@color/colorDownloadSubText"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPromotionDialogDivider" />

        <Button
            android:id="@+id/dialog_screenshot_on_boarding_btn_got_it"
            style="@style/PromoteDialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/screenshot_on_boarding_btn_got_it"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</FrameLayout>


